huruf = 'abcdefghijklmnopqrstuvwxyz'
enkripsi = ''
k = int(input("Masukkan nilai k (dari 1 hingga 26): "))
teks = input("Masukkan teks yang ingin dienkripsi: ")
for i in teks :
            if i in huruf :
                j= huruf. find (i)
                m = (j + k) % 26
                enkripsi = enkripsi + huruf [m]
            else :
                enkripsi = enkripsi + i
print ('Hasil enkripsi =', enkripsi)
