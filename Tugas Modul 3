            print (Pilihan)
            Pilihan = ('2. Tabel Penjumlahan n x n')
            print (Pilihan)
            Pilihan = ('3. Keluar')
            print (Pilihan)
            Pilihan = (input ('Masukkan Pilihan (1/2/3) : '))
            if (Pilihan == '1'):
                for i in range (1,n+1):   
                    for k in range (1, n+1):  
                        print (i*k, end = '        ')
                    print ()
            elif (Pilihan == '2'):
                for i in range (0,n+1):
                    for k in range (0, n+1):
                        print (i+k, end = '        ')
                    print ()
            elif (Pilihan == '3'):
                break
            else  :
                print ('''
                    Input Ulang Menu ''')

        
