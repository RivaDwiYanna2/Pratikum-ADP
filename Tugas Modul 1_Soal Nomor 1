Program Perkalian_Sederhana;
uses crt;
Var
        a,b,c,hasil:real;
Begin
clrscr;
        Writeln ('Tugas Modul 1');
        Writeln ('Nama = Riva Dwi Yanna');
        Writeln ('NIM = 2310432018');
        Writeln ('Shift = 1');
        Readln;

        Write ('a = ');
        Readln (a);
        Write ('b = ');
        Readln (b);
        Write ('c = ');
        Readln (c);
        Hasil := a*b*c;
        Write ('Hasil = ', Hasil:2:2);
        Readln;
End.

